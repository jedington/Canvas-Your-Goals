@model Step

@{
    ViewData["Title"] = "Add Step";
}

<fieldset class="shadow centered">
    <legend> @ViewData["Title"] </legend>
    <form method="post">
        <input asp-for="StepId" type="hidden" />
        <input asp-for="TaskId" type="hidden" />
        <table class="table-bordered table-striped table-sm">
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <thead>
                    <tr>
                        <td colspan="2">
                            <div asp-validation-summary="All"> </div>
                        </td>
                    </tr>
                </thead>
            }
            <tbody>
                <tr>
                    <th> Step Name: </th>
                    <td> <input asp-for="StepName" /> </td>
                </tr>
                <tr>
                    <th> Step Order: </th>
                    <td> <input asp-for="StepOrder" type="number" /> </td>
                </tr>
                <tr>
                    <th> Status: </th>
                    <td>
                        <select asp-for="Status">
                            <option value=""> - Select - </option>
                            <option value="Finished">Finished</option>
                            <option value="In Progress">In Progress</option>
                            <option value="Problem">Problem</option>
                            <option value="Waiting">Waiting</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th> Start Date: </th>
                    <td> <input asp-for="StartDate" type="date" /> </td>
                </tr>
                <tr>
                    <th> End Date: </th>
                    <td> <input asp-for="EndDate" type="date" /> </td>
                </tr>
                <tr>
                    <th> Details: </th>
                    <td> @Html.EditorFor(model => model.Details) </td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td class="text-center" colspan="2">
                        <input class="btn btn-primary ml-1 mr-1" type="submit" value="Create Task!" />
                        <a class="btn btn-secondary ml-1 mr-1" asp-controller="Task" asp-action="Details" asp-route-taskId="@Model.TaskId">
                            Cancel
                        </a>
                    </td>
                </tr>
            </tfoot>
        </table>
    </form>
</fieldset>