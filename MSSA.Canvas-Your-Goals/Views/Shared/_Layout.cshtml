@inject IUserRepository _userRepository

<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Canvas Your Goals </title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </head>
    
    <body>
        <header>
            <div class="main border-top border-bottom">
                <span>
                    <h1 class="title"> Canvas Your Goals </h1>
                    <br />
                    <h3 class="title"> "Forward the Foundation" - Hari Seldon </h3>
                    <br />
                </span>
                <span class="flexit">
                    <a href="https://github.com/jedington">
                        <img class="github" src="https://cdn.discordapp.com/attachments/363603833680560139/817577980582297600/best.png" alt="Project GitHub">
                    </a>
                    <ul class="menu btn-group m-1">
                    @if (_userRepository.IsUserLoggedIn())
                    {
                        <li class="nav-item btn btn-outline-light">
                            <a asp-controller="User" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item btn btn-outline-light">
                            <a asp-controller="VisionBoard" asp-action="Index">Vision Board</a>
                        </li>
                        <li class="nav-item btn btn-outline-light">
                            <a asp-controller="Goal" asp-action="Index">Goal List</a>
                        </li>
                        <li class="nav-item btn btn-outline-light">
                            <a asp-controller="User" asp-action="Profile">Profile</a>
                        </li>

                        <li class="nav-item btn btn-outline-light">
                            <a asp-controller="User" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item btn btn-outline-light">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item btn btn-outline-light">
                            <a asp-controller="User" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item btn btn-outline-light">
                            <a asp-controller="User" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item btn btn-outline-light">
                            <a asp-controller="User" asp-action="ResetPassword">Forgot Password</a>
                        </li>
                    }
                    </ul>
                </span>
                <span class="theme">
                    <em> Pick a Theme </em> <br>
                    <span class="theme flexit">
                        <button class="btn-3d purple" value="dark">dark</button>
                        <button class="btn-3d blue" value="calm">calm</button>
                        <button class="btn-3d yellow" value="light">light</button>
                    </span>
                </span>
            </div>
        </header>

        <main role="main" class="lift">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted">
            <div class="container text-center">
                &copy; 2021 - Canvas Your Goals - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a> - <a asp-area="" asp-controller="Home" asp-action="Terms">Terms & Conditions</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>
