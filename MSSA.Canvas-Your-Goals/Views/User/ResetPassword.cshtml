@model ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
}

<h3 class="bg-dark text-white m-2 p-2"> @ViewData["Title"] </h3>
<form method="post">
    <table class="centered table-sm bg-transparent">
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <thead>
            <tr>
                <td colspan="2">
                    <div asp-validation-summary="All"> </div>
                </td>
            </tr>
            </thead>
        }
        <tr>
            <th>
                Email:
            </th>
            <td>
                <input asp-for="Email" type="email" class="form-control" placeholder="Input Email" required/>
            </td>
        </tr>
        <tr>
            <th>
                Security Answer:
            </th>
            <td>
                <input asp-for="SecurityAnswer" type="text" class="form-control" placeholder="Your Unique Answer..." required/>
            </td>
        </tr>
        <tr>
            <th>
                New Password:
            </th>
            <td>
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Input Password" required/>
            </td>
        </tr>
        <tr>
            <th>
                Confirm Password:
            </th>
            <td>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm..." required/>
            </td>
        </tr>
        <tr>
            <td class="text-center" colspan="2">
                <input class="btn btn-primary ml-1 mr-1" type="submit" value="Reset!"/>
            </td>
        </tr>
    </table>
</form>