@model User

@{
    ViewData["Title"] = $"Edit Information // {@Model.Email}";
}

<h3 class="bg-dark text-white m-2 p-2"> @ViewData["Title"] </h3>
<form method="post">
    <input asp-for="UserId" type="hidden" />
    <table class="centered table-sm bg-transparent">
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <thead>
            <tr>
                <td colspan="2">
                    <div asp-validation-summary="All"> </div>
                </td>
            </tr>
            </thead>
        }
        <tr>
            <th>
                Email:
            </th>
            <td>
                <input asp-for="Email" type="email" class="form-control" placeholder="Input your Email" required/>
            </td>
        </tr>
        <tr>
            <th>
                Security Hint:
            </th>
            <td>
                <input asp-for="SecurityHint" type="text" class="form-control" placeholder="Unique Question..." required/>
            </td>
        </tr>
        <tr>
            <th>
                Security Answer:
            </th>
            <td>
                <input asp-for="SecurityAnswer" type="text" class="form-control" placeholder="Unique Answer..." required/>
            </td>
        </tr>
        <tr>
            <td class="text-center" colspan="2">
                <input class="btn btn-primary ml-1 mr-1" type="submit" value="Submit!"/>
                <a class="btn btn-secondary ml-1 mr-1" asp-controller="User" asp-action="Profile">
                    Cancel
                </a>
            </td>
        </tr>
    </table>
</form>