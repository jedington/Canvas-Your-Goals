@model User

@{
    ViewData["Title"] = "Delete Account?!";
}

<h3 class="bg-dark text-white m-2 p-2"> @ViewData["Title"] </h3>
<table class="centered table-bordered table-striped table-sm">
    <tr>
        <th> Email: </th>
        <td> @Model.Email </td>
    </tr>
    <tr>
        <td class="text-center btn-outline-warning" colspan="2">
            <h2> Are You Sure?!?! </h2>
        </td>
    </tr>
    <tr>
        <td class="text-center" colspan="2">
            <form method="post">
                <input asp-for="UserId" type="hidden" />
                <input type="submit" value="Delete" class="btn btn-danger ml-1 mr-1" />
                @*
                <button class="btn btn-danger ml-1 mr-1" asp-controller="Goal" asp-action="DeleteAction" asp-route-goalId="@Model.UserId">
                    Delete!!!
                </button>
                *@
                <button class="btn btn-secondary ml-1 mr-1" asp-controller="User" asp-action="Profile" formmethod="get">
                    Cancel
                </button>
            </form>
        </td>
    </tr>
</table>