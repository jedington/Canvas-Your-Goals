@model MSSA.Canvas_Your_Goals.Models.Task

@{
    ViewData["Title"] = "Edit Task";
}

<header> <partial name="LoggedInNav" /> </header>
<h3 class="bg-primary text-white m-2 p-2"> @ViewData["Title"] </h3>
<div asp-validation-summary="All"></div>
<form asp-controller="Task" asp-action="Edit" method="post">
    <input asp-for="TaskId" type="hidden" />
    <input asp-for="GoalId" type="hidden" />
    <table class="centered table-bordered table-striped table-sm">
        <tr>
            <th>Task Name:</th>
            <td>
                <input asp-for="TaskName" />
            </td>
        </tr>
        <tr>
            <th> Task Order: </th>
            <td> <input asp-for="TaskOrder" type="range" /> </td>
        </tr>
        <tr>
            <th>Status:</th>
            <td>
                <select asp-for="Status">
                    <option value=""> @Model.Status </option>
                    <option value="Finished">Finished</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Problem">Problem</option>
                    <option value="Waiting">Waiting</option>
                </select>
            </td>
        </tr>
        <tr>
            <th>Start Date:</th>
            <td> <input asp-for="StartDate" type="date" /> </td>
        </tr>
        <tr>
            <th>End Date:</th>
            <td> <input asp-for="EndDate" type="date" /> </td>
        </tr>
        <tr>
            <th>Details:</th>
            <td> <input asp-for="Details" /> </td>
        </tr>
        <tr>
            <td class="text-center" colspan="2">
                <input class="btn btn-primary ml-1 mr-1" type="submit" value="Submit!" />
                <a class="btn btn-secondary ml-1 mr-1" asp-controller="Task" asp-action="Details" asp-route-taskId="@Model.TaskId">
                    Cancel
                </a>
            </td>
        </tr>
    </table>
</form>