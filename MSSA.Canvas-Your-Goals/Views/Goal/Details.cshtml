@model Goal

@{
    ViewData["Title"] = $" {@Model.GoalName}, Details";
}

<body>
    <header> <partial name="LoggedInNav" /> </header>
    <h3 class="bg-primary text-white m-2 p-2"> @ViewData["Title"] </h3>
    <table class="centered table-bordered table-striped table-sm">
        <tr>
            <th> Goal Name: </th>
            <td> @Model.GoalName </td>
        </tr>
        <tr>
            <th> Priority: </th>
            <td> @Model.Priority </td>
        </tr>
        <tr>
            <th> Status: </th>
            <td> @Model.Status </td>
        </tr>
        <tr>
            <th> Type: </th>
            <td> @Model.Type </td>
        </tr>
        <tr>
            <th> Start Date: </th>
            <td> @Model.StartDate?.ToString("MM/dd/yyyy") </td>
        </tr>
        <tr>
            <th> End Date: </th>
            <td> @Model.EndDate?.ToString("MM/dd/yyyy") </td>
        </tr>
        <tr>
            <th> Details: </th>
            <td> @Model.Details </td>
        </tr>
        <tr>
            <td class="text-center" colspan="2">
                <a class="btn btn-info ml-1 mr-1" asp-controller="Goal" asp-action="Index">
                    Back
                </a>
                <a class="btn btn-warning ml-1 mr-1" asp-controller="Goal" asp-action="Edit" asp-route-goalId="@Model.GoalId">
                    Edit
                </a>
                <a class="btn btn-danger ml-1 mr-1" asp-controller="Goal" asp-action="Delete" asp-route-goalId="@Model.GoalId">
                    Delete
                </a>
            </td>
        </tr>
    </table>
</body>