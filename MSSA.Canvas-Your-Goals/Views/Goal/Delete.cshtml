@model Goal

@{
    ViewData["Title"] = "Delete Goal";
}

<body>
    <h2> @ViewData["Title"] </h2>
    <table class="centered table-bordered table-striped table-sm">
        <tr>
            <th> Goal Name: </th>
            <td> @Model.GoalName </td>
        </tr>
        <tr>
            <th> Priority: </th>
            <td> @Model.Priority </td>
        </tr>
        <tr>
            <th> Status: </th>
            <td> @Model.Status </td>
        </tr>
        <tr>
            <th> Type: </th>
            <td> @Model.Type </td>
        </tr>
        <tr>
            <th> Start Date: </th>
            <td> @Model.StartDate?.ToString("MM/dd/yyyy") </td>
        </tr>
        <tr>
            <th> End Date: </th>
            <td> @Model.EndDate?.ToString("MM/dd/yyyy") </td>
        </tr>
        <tr>
            <td class="text-center" colspan="2">
                <h2> Are You Sure? </h2>
            </td>
        </tr>
        <tr>
            <td class="text-center" colspan="2">
                <form method="post">
                    <button asp-controller="Goal" asp-action="DeleteAction" asp-route-goalId="@Model.GoalId">
                        Delete
                    </button>
                    <button asp-controller="Goal" asp-action="Index" formmethod="get">
                        Cancel
                    </button>
                </form>
            </td>
        </tr>
    </table>
</body>