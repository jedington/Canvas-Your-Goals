@model Goal

@{
    ViewData["Title"] = "Delete Goal";
}
<header> <partial name="LoggedInNav" /> </header>
<fieldset class="shadow centered">
    <legend> @ViewData["Title"] </legend>
    <table class="table-bordered table-striped table-sm">
        <tbody>
            <tr>
                <th> Goal Name: </th>
                <td> @Model.GoalName </td>
            </tr>
            <tr>
                <th> Priority: </th>
                <td> @Model.Priority </td>
            </tr>
            <tr>
                <th> Status: </th>
                <td> @Model.Status </td>
            </tr>
            <tr>
                <th> Type: </th>
                <td> @Model.Type </td>
            </tr>
            <tr>
                <th> Start Date: </th>
                <td> @Model.StartDate.ToString("MM/dd/yyyy") </td>
            </tr>
            <tr>
                <th> End Date: </th>
                <td> @Model.EndDate?.ToString("MM/dd/yyyy") </td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td class="text-center btn-outline-warning" colspan="2">
                    <h2> Are You Sure? </h2>
                </td>
            </tr>
            <tr>
                <td class="text-center" colspan="2">
                    <form method="post">
                        <input type="hidden" asp-for="GoalId" />
                        <input type="submit" value="Delete" class="btn btn-danger ml-1 mr-1" />
                        @*
                            <button class="btn btn-danger ml-1 mr-1" asp-controller="Goal" asp-action="DeleteAction" asp-route-goalId="@Model.GoalId">
                                Delete
                            </button>
                        *@
                        <button class="btn btn-secondary ml-1 mr-1" asp-controller="Goal" asp-action="Index" asp-route-userId="@Model.UserId" formmethod="get">
                            Cancel
                        </button>
                    </form>
                </td>
            </tr>
        </tfoot>
    </table>
</fieldset>